DML ( ESSE TRABALHA COM AS INFORMACOES DA TABELA)
    INSERT INTO
    UPDATE
    DELETE  
    TRUNCATE

*INFORMACOES DA TABELA*

insert into pessoas values
(default, 'Marli', '1988-05-14', 'F', '60', '1.56', 'Irlanda');

_________________________________________________

*MODIFICAR INFORMACOES DA TABELA *

update cursos
set nome= 'JAVA', carga= 40 , ano='2015'
where idcursos = '5';

update cursos
set ano='2025'
where  ano= '2018'
limit 1;

(LIMIT 1 - VOCE USA PARA LIMITAR QUANTIDADE DE ITENS APAGADO, CONFORME A DESCRIÇÃO.
CUIDADO AO APAGAR MUITOS ITENS PQ DEPOIS Q ISSO OCORRE 
NAO TEM COMO RECUPERAR SE NAO TIVER BACKUP)

____________________________________________________

*APAGA A LINHA*

delete from cursos
where idcursos= '10';

____________________________________________________

*APAGA AS INFORMACOES TODA DO REGISTRO*

truncate cursos;  
