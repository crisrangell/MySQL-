*Criar banco de dado*

create database cadastro 
default character set utf8
default collate utf8_general_ci;

(Códigos acima: 
• criação de um banco de dado 
• "linguagem" )


*Criação de tabelas*

use cadastro;

create table pessoas(
id int not null auto_increment,
nome varchar (30) not null,
nascimento date,
sexo enum ( 'M', 'F'),
peso decimal(5,2),
altura decimal (3,2),
nacionalidade varchar (20) default 'Brasil',
primary key (id)
)default charset= utf8;

(Codigos acima:

• Criar tabela;
• Criar id - identificação;
• Descrição do que vai conter na minha tabela;
• Criar chave;)


*Registro*
insert into pessoas values
(default, 'Marli', '1988-05-14', 'F', '60', '1.56', 'Irlanda');



select * from pessoas;
